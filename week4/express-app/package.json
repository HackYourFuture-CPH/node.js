  "author": "Pachito Marco Calabrese <pm.calabrese@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-preset-node8": "^1.2.0",
    "nodemon": "^1.12.1"
  },
  "engines": {
    "node": "8.*",
    "npm": "5.*"
  }
}
